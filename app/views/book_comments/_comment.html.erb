<% book_comments.each do |comment| %>
  <tr>
　<td>
　  <%= comment.comment %>
　</td>
　<td>
　  <% if comment.user == current_user %>
      <%= link_to "Destroy", book_book_comment_path(book, comment), method: :delete, remote:true, class: "btn btn-danger" %>
    <% end %>

　</td>

  </tr>
<% end %>

  <li>
    <i class="fa fa-comment"></i>
      <a href="#comments"><%= book_comments.count %></a>
  </li>

  <div class="comment-list bt style-2" id="comments">
    <div class="float-wrapper">
      <h2 class="comment-count"><%= book_comments.count %>件コメント</h2>
    </div>
  </div>
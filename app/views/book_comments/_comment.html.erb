<% @comments.each do |comments| %>
　<%= comments.comment %>
    <% if comments.user == current_user %>
      <%= link_to "Destroy", book_book_comment_path(comments), method: :delete, remote:true, class: "btn btn-danger" %>
    <% end %>
<% end %>
 <%= form_with model: [@book, @comment] do |f| %>
    <%= f.text_area :comment %>
    <%= f.submit "送信" %>
  <% end %>
  <li>
    <i class="fa fa-comment"></i>
      <a href="#comments"><%= @comments.count %></a>
    </li>

  <div class="comment-list bt style-2" id="comments">
    <div class="float-wrapper">
      <h2 class="comment-count"><%= @comments.count %>件コメント</h2>
    </div>
  </div>